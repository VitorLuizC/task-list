.modal-container
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  width: 100%
  height: @width
  opacity: 0
  transform: translateY(-100%)
  transition: transform .5s ease-out,
              opacity .5s ease-out

  & > .overlay
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background-color: rgba(#000, .75)

  & > .content
    position: absolute
    top: 50%
    left: 50%
    transform: translateY(-50%) translateX(-50%)

  &.-open
    opacity: 1
    transform: translateY(0)
